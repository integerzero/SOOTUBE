extends layouts/main

block content
    .form-container
        form(action=routes.editVideo(video.id), method="post")
            input(type="text", placeholder="Title", name="title" value=video.title)
            textarea(name="desciption", placeholder="Description" value=video.desciption)
            input(type="submit", value="Update Video")
        a.form-container__link.form-container__link--update(href=`/videos${routes.deleteVideo}`) Delete Video